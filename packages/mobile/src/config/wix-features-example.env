# Wix Feature Toggles Configuration
# Copy this file to your environment configuration or add these variables to your .env file

# === WIX SDK FEATURE TOGGLES ===

# Master toggle to disable all SDK usage and use REST API only
WIX_SDK_ENABLED=true

# Domain-specific SDK toggles (only used if WIX_SDK_ENABLED=true)
WIX_SDK_CART_ENABLED=true
WIX_SDK_AUTH_ENABLED=true
WIX_SDK_RESTAURANTS_ENABLED=true

# === API CONFIGURATION ===

# Whether to use REST API as fallback when SDK fails
USE_REST_API_FALLBACK=true

# Enable API response caching
ENABLE_API_CACHING=true

# === DEVELOPMENT & DEBUG ===

# Enable detailed API call logging (default: true in __DEV__)
DEBUG_API_CALLS=false

# Enable authentication diagnostics (default: true in __DEV__)
ENABLE_AUTH_DIAGNOSTICS=false

# === USAGE EXAMPLES ===

# To disable all SDK usage and use pure REST API:
# WIX_SDK_ENABLED=false

# To disable only cart SDK (useful for testing cart REST implementation):
# WIX_SDK_CART_ENABLED=false

# To disable authentication SDK (use manual token management):
# WIX_SDK_AUTH_ENABLED=false

# For production with minimal SDK usage:
# WIX_SDK_ENABLED=true
# WIX_SDK_CART_ENABLED=false
# WIX_SDK_AUTH_ENABLED=false
# WIX_SDK_RESTAURANTS_ENABLED=false
# USE_REST_API_FALLBACK=true
# DEBUG_API_CALLS=false
